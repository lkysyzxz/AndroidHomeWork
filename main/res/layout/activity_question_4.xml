<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cqu.wwt.surveynew.Question_4">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="@string/QUESTION_4"
        android:id="@+id/QUE_4_BIGTITLE"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@id/QUE_4_BIGTITLE"
        android:id="@+id/QUE_4_TITLE"
        android:text="@string/QUESTION_4_TITLE"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/QUE_4_TITLE"
        android:id="@+id/QUE_4_LIST_CONTAINER">

        <ListView
            android:id="@+id/QUE_4_LIST"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/QUE_4_TITLE"
            android:entries="@array/QUESTION_4_MAJORS" />
    </LinearLayout>

    <Button
        android:id="@+id/QUE_4_NEXT"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/QUE_4_LIST_CONTAINER"
        android:onClick="onClick"
        android:text="Next" />
    <Button
        android:id="@+id/QUE_4_BACK"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QUE_4_NEXT"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="Back" />
</RelativeLayout>
