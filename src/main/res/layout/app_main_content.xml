<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.cqu.wwt.drawerlayout.MainActivity">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/main_spinner_grades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/main_margin"
                android:layout_marginBottom="@dimen/main_margin"
                style="@android:style/Widget.Material.Spinner"/>

            <Spinner
                android:layout_marginTop="@dimen/main_margin"
                android:layout_marginBottom="@dimen/main_margin"
                android:id="@+id/main_spinner_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>
            <TextView
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/main_margin"
                android:layout_marginBottom="@dimen/main_margin"
                android:id="@+id/main_text_commander"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TestName"
                android:textSize="@dimen/text_size"
                android:textAlignment="center"/>
            <EditText
                android:layout_marginTop="@dimen/main_margin"
                android:layout_marginBottom="@dimen/main_margin"
                android:id="@+id/main_edit_real_umpires"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="输入在寝人数"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textAlignment="center"/>
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/main_text_total_umpires"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/text_size"
                android:text="4 Test"/>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:layout_marginTop="@dimen/main_margin"
        android:id="@+id/main_edit_otherinfo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="请输入备注信息"
        android:maxLines="5"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size"
        android:textAlignment="center" />

    <Button
        android:textColor="@color/textColor"
        android:layout_marginTop="@dimen/main_margin"
        android:id="@+id/main_button_submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:background="@drawable/button"
        android:onClick="onSubmitClick"
        android:textSize="@dimen/text_size"
        android:text="提  交"
        android:shadowColor="@android:color/darker_gray"
        android:textAlignment="center" />
    </LinearLayout>
</ScrollView>