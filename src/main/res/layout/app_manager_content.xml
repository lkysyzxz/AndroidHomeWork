<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/app_bar_manager"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.cqu.wwt.drawerlayout.ManagerActivity"
    android:orientation="vertical">
    <ImageView
        android:layout_marginLeft="110dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@mipmap/ic_launcher"/>
    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textAlignment="center"
        android:text="Create New Task"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/textColor"
        android:onClick="onCreateNewTaskButtonClick"
        android:shadowColor="@android:color/darker_gray"
        android:background="@drawable/button"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/manager_spinner_grades"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:textAlignment="center"/>
    <Button
        android:shadowColor="@android:color/darker_gray"
        android:textColor="@color/textColor"
        android:background="@drawable/button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textAlignment="center"
        android:text="Kill Current Task"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:onClick="onKillCurrentTaskButtonClick"/>
</LinearLayout>

